/**
 * Implementation of hook_translation_link_alter
 */
function languagelink_title_translation_link_alter(&$links, $path) {
  foreach ( $links as $lang => $link ) {
    $links[$lang]['attributes']['title'] = $links[$lang]['language']->native;
  }
}
